{
  // ============================================================================
  // GLM_quota_kicker 配置文件示例
  // ============================================================================
  // 复制此文件为 config.jsonc 并填入你的实际配置
  // ============================================================================

  "api": {
    // 你的智谱 AI API Key
    // 获取地址: https://open.bigmodel.cn/usercenter/apikeys
    "key": "your-api-key-here",

    // 使用的模型名称
    // 可选值: glm-4.7, glm-4-flash, glm-4-plus 等
    "model": "glm-4.7"
  },

  "provider": {
    // 服务商名称（固定为智谱 AI）
    "name": "智谱 AI",

    // API 基础地址
    "baseUrl": "https://open.bigmodel.cn/api/anthropic",

    // API 端点路径
    "endpoint": "/v1/messages",

    // 认证请求头
    "authHeader": "x-api-key"
  },

  // ============================================================================
  // 请求配置
  // ============================================================================
  "request": {
    // 唤醒消息列表（随机选择，避免重复消息被识别为异常）
    // 如果不配置此字段，将使用默认消息 "hi"
    "prompts": [
      "hi",
      "你好",
      "hello",
      "早上好",
      "在吗",
      "测试连接",
      "ping",
      "1+1等于几",
      "现在几点了",
      "天气怎么样"
    ]
  }
}
